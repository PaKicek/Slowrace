func int factorial (int n) {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

main (int argc, array string argv[]) {
    if (argc >= 1) {
        int n = to_int(argv[0]);
        int result = factorial(n);
        print("Factorial of the number ");
        print(n);
        print(": ");
        println(result);
    } else {
        println("Usage: factorial <n>");
    }
}